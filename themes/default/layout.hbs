<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>{{ route.handler.meta.title }} - DotJS</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/themes/default/css/bootstrap.rtl.min.css'>
    <link rel='stylesheet' type='text/css' media='screen' href='/themes/default/css/main.css'>
</head>
<body>
    <div class="container-md">
        <nav class="navbar navbar-expand-lg navbar-light bg-warning rounded-1 mt-3 mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/assets/images/logo.png" width="48" height="48" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {{#each menu }}
                        <li class="nav-item">
                            <a class="nav-link{{#equals ../route.path path}} active{{/equals}}" aria-current="page" href="{{path}}">{{ title }}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </nav>
        <div>
            {{{ body }}}
        </div>
    </div>
</body>
</html>

